root = true

[*]
charset = utf-8
end_of_line = crlf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4
trim_trailing_whitespace = true

# Specify for specific file types
[*.{js,jsx,ts,tsx}]
max_line_length = 120

[*.json]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.html]
indent_size = 2
